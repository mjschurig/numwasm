{
  "name": "sciwasm",
  "version": "0.1.0",
  "description": "SciPy-inspired scientific computing in TypeScript/WebAssembly",
  "type": "module",
  "main": "./dist/sciwasm.cjs",
  "module": "./dist/sciwasm.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/sciwasm.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/sciwasm.cjs"
      }
    },
    "./wasm/sciwasm.wasm": "./dist/wasm/sciwasm.wasm",
    "./wasm/superlu.wasm": "./dist/wasm/superlu.wasm",
    "./wasm/arpack.wasm": "./dist/wasm/arpack.wasm",
    "./wasm/quadpack.wasm": "./dist/wasm/quadpack.wasm",
    "./wasm/linpack.wasm": "./dist/wasm/linpack.wasm",
    "./superlu": {
      "import": {
        "types": "./dist/superlu-loader.d.ts",
        "default": "./dist/superlu-loader.mjs"
      },
      "require": {
        "types": "./dist/superlu-loader.d.ts",
        "default": "./dist/superlu-loader.cjs"
      }
    }
  },
  "scripts": {
    "build:wasm": "./scripts/build-wasm.sh",
    "build:superlu": "./scripts/build-superlu.sh",
    "build:arpack": "./scripts/build-arpack.sh",
    "build:quadpack": "./scripts/build-quadpack.sh",
    "build:linpack": "./scripts/build-linpack.sh",
    "build:wasm-all": "pnpm run build:wasm && pnpm run build:superlu && pnpm run build:arpack && pnpm run build:quadpack && pnpm run build:linpack",
    "build:lib": "vite build",
    "build": "pnpm run build:wasm-all && pnpm run build:lib",
    "test": "vitest run",
    "clean": "rm -rf dist/",
    "docs": "typedoc",
    "lint": "eslint src tests --ext .ts"
  },
  "peerDependencies": {
    "numwasm": ">=0.1.0"
  },
  "devDependencies": {
    "numwasm": "workspace:*",
    "@types/node": "^20.10.0",
    "typedoc": "^0.27.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "scipy",
    "scientific-computing",
    "wasm",
    "webassembly",
    "typescript"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
